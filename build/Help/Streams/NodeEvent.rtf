	h = g.split;                                                 // split into individual group events\
	c = b.split;						// and synth events\
	c[0].set(\\freq,700);\
	c[1].set(\\freq,400);\
	\
	h[0].release;\
	h[1].release;\
	\
	g.stop;\
)\
