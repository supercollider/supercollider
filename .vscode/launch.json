{
    // see https://vector-of-bool.github.io/docs/vscode-cmake-tools/debugging.html
    "version": "0.2.0",
    "configurations": [
        // lldb/macOS configurations
        {
            "name": "lldb: attach",
            "type": "lldb",
            "request": "attach",
            "program": "${command:cmake.launchTargetPath}",
            "waitFor": true,
        },
        {
            "name": "lldb: launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "lldb",
        },
    ]
}
