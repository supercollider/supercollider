        },
        {
            "name": "macOS: supernova launch (lldb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/server/supernova/Debug/supernova",
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        // Qt IDE target
        {
            "type": "lldb",
            "request": "attach",
            "name": "macOS: Qt IDE attach (lldb)",
            "program": "${workspaceFolder}/build/editors/sc-ide/Debug/SuperCollider.app/Contents/MacOS/SuperCollider",
            "waitFor": true,
        },
        {
            "name": "macOS: Qt IDE launch (lldb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/editors/sc-ide/Debug/SuperCollider.app/Contents/MacOS/SuperCollider",
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        // install target 
        {
            "type": "lldb",
            "request": "attach",
            "name": "macOS: sclang [install] attach (lldb)",
            "program": "${workspaceFolder}/build/Install/SuperCollider/SuperCollider.app/Contents/MacOS/sclang",
            "waitFor": true,
        },
        {
            "name": "macOS: sclang [install] launch (lldb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Install/SuperCollider/SuperCollider.app/Contents/MacOS/sclang",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "macOS: IDE [install] attach (lldb)",
            "program": "${workspaceFolder}/build/Install/SuperCollider/SuperCollider.app/Contents/MacOS/SuperCollider",
            "waitFor": true,
        },
        {
            "type": "lldb",
