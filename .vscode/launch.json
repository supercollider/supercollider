{
    // see https://github.com/microsoft/vscode-cmake-tools/blob/main/docs/debug-launch.md
    "version": "0.2.0",
    "configurations": [
        // sclang target
        {
            "type": "lldb",
            "request": "attach",
            "name": "macOS: sclang attach (lldb)",
            "program": "${workspaceFolder}/build/lang/Debug/sclang",
            "waitFor": true,
        },
        {
            "name": "macOS: sclang launch (lldb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/lang/Debug/sclang",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb",
        },
        // scsynth target
        {
            "type": "lldb",
            "request": "attach",
            "name": "macOS: scsynth attach (lldb)",
            "program": "${workspaceFolder}/build/server/scsynth/Debug/scsynth",
            "waitFor": true,
        },
        {
            "name": "macOS: scsynth launch (lldb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/server/scsynth/Debug/scsynth",
            "args": [
                "-u", "57110"
            ],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        // supernova target
        {
            "type": "lldb",
            "request": "attach",
            "name": "macOS: supernova attach (lldb)",
